<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bóng đổ -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#33000000" /> <!-- Bóng đổ -->
        </shape>
    </item>

    <!-- Border -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#FFFFFF" /> <!-- Nền -->
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" /> <!-- Viền -->
        </shape>
    </item>
</layer-list>
